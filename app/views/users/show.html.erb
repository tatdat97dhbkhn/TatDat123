<% provide :title, t(".welcome") %>
<h1><%= Time.now %></h1>
<div class="row" style="margin-top:30px;margin-left:-5px;">
  <aside class="col-md-4">
    <section class="user_info">
      <h1 >
        <%= gravatar_for @user, Settings.length.size %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render partial: "follow_form", collection: @users, as: "user" if logged_in? %>
    <% if @user.microposts.any? %>
      <h3><%= t ".microposts" %> (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
